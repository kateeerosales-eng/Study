// --- SUB COMPONENTS ---

const HeroSection = ({ activeTab }) => {
  const content = {
    apec_asean: {
      title: "Global Practice Frameworks",
      subtitle: "Navigating International Mobility & RA 9266",
      grad: "from-blue-900 via-slate-900 to-slate-900"
    },
    green: {
      title: "Sustainable Design Standards",
      subtitle: "Mastering BERDE, LEED, EDGE & WELL",
      grad: "from-emerald-900 via-slate-900 to-slate-900"
    },
    quiz: {
      title: "The Master Proficiency Test",
      subtitle: "100 Items: Identification & Classification",
      grad: "from-amber-900 via-slate-900 to-slate-900"
    }
  };
  const curr = content[activeTab];

  return (
    <section className={`bg-gradient-to-br ${curr.grad} text-white py-16 px-4 transition-all duration-500`}>
        <div className="max-w-4xl mx-auto text-center">
          <h1 className="text-4xl md:text-5xl font-extrabold mb-4 leading-tight tracking-tight">
            {curr.title}
          </h1>
          <p className="text-xl text-slate-300 max-w-2xl mx-auto font-medium opacity-90">
            {curr.subtitle}
          </p>
        </div>
    </section>
  );
};

const TabButton = ({ id, label, activeTab, setActiveTab, icon }) => (
  <button 
    onClick={() => setActiveTab(id)}
    className={`flex items-center gap-2 px-5 py-2.5 rounded-full transition-all duration-200 border ${
      activeTab === id 
        ? 'bg-white text-slate-900 border-white font-bold shadow-md transform scale-105' 
        : 'bg-transparent text-slate-300 border-slate-700 hover:border-slate-500 hover:text-white'
    }`}
  >
    {icon}
    {label}
  </button>
);

const Badge = ({ text, color }) => (
  <span className={`px-2 py-1 rounded-md text-xs font-bold uppercase tracking-wider ${color}`}>
    {text}
  </span>
);

const DetailedCard = ({ title, sub, icon, headerColor, details }) => (
  <div className="bg-white rounded-2xl shadow-md overflow-hidden border border-slate-100 flex flex-col">
    <div className={`${headerColor} p-6 flex items-center justify-between`}>
      <div>
        <h3 className="text-white font-bold text-xl">{title}</h3>
        <p className="text-white/80 text-xs font-medium uppercase tracking-wide">{sub}</p>
      </div>
      <div className="bg-white/20 p-2 rounded-lg backdrop-blur-sm">{icon}</div>
    </div>
    <div className="p-6 flex-1">
      <ul className="space-y-4">
        {details.map((d, i) => (
           <li key={i} className="text-sm border-b border-slate-50 last:border-0 pb-3 last:pb-0">
             <span className="block text-xs font-bold text-slate-400 uppercase mb-1">{d.label}</span>
             <span className="text-slate-800 font-medium">{d.val}</span>
           </li>
        ))}
      </ul>
    </div>
  </div>
);

const StandardDetail = ({ title, sub, origin, color, desc, points, icon }) => {
  const colors = {
    emerald: "bg-emerald-50 text-emerald-900 border-emerald-200",
    blue: "bg-blue-50 text-blue-900 border-blue-200",
    lime: "bg-lime-50 text-lime-900 border-lime-200"
  };
  const iconBGs = {
    emerald: "bg-emerald-500",
    blue: "bg-blue-500",
    lime: "bg-lime-600"
  };

  return (
    <div className={`p-6 rounded-2xl border ${colors[color]} flex flex-col md:flex-row gap-6`}>
       <div className="flex-1">
         <div className="flex items-center gap-3 mb-2">
            <div className={`p-2 rounded-lg shadow-sm ${iconBGs[color]}`}>{icon}</div>
            <div>
              <h3 className="text-2xl font-bold">{title}</h3>
              <p className="text-xs font-bold uppercase opacity-70">{origin}</p>
            </div>
         </div>
         <p className="text-sm font-medium opacity-70 mb-4">{sub}</p>
         <p className="text-slate-700 text-sm leading-relaxed mb-4">{desc}</p>
       </div>
       <div className="w-full md:w-1/3 bg-white/60 rounded-xl p-4 backdrop-blur-sm border border-white/50">
          <h4 className="font-bold text-sm mb-3 uppercase tracking-wide opacity-80">Rating Levels</h4>
          <ul className="space-y-2">
            {points.map((p, i) => (
              <li key={i} className="text-xs font-semibold flex items-center gap-2">
                <CheckCircle className="w-3 h-3 opacity-50" /> {p}
              </li>
            ))}
          </ul>
       </div>
    </div>
  )
};

// --- QUIZ DATA GENERATORS ---

