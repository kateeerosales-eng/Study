    { q: "Must a Foreign Architect have a Filipino counterpart?", a: "Yes" },
    { q: "Who assumes civil liability in a Foreign-Local partnership?", a: "Filipino Architect" },
    { q: "Highest rating in LEED", a: "Platinum" },
    { q: "Highest rating in BERDE", a: "5-Star" },
    { q: "Highest rating in BREEAM", a: "Outstanding" },
    { q: "Green system focusing on 20% savings", a: "EDGE" },
    { q: "Green system focusing on human wellness", a: "WELL" },
