    { q: "Fire Code of the Philippines", a: "RA 9514" },
    { q: "Environmental Impact Assessment", a: "EIA" },
    { q: "Environmental Compliance Certificate", a: "ECC" },
    { q: "Role responsible for EIA/ECC", a: "Environmental Planner" },
    { q: "Does APEC Architect status grant automatic license in host country?", a: "No" },
    { q: "Number of economies in APEC", a: "21" },
    { q: "Number of member states in ASEAN", a: "10" },
    { q: "Document facilitating professional mobility in ASEAN", a: "MRA" },
    { q: "APEC Architect Central Council acronym", a: "AACC" },
    { q: "ASEAN Architect Council acronym", a: "AAC" },
    { q: "Standard of Professional Practice", a: "SPP" },
    { q: "Code of Ethical Conduct", a: "CEC" },
    { q: "Continuing Professional Development", a: "CPD" },
    { q: "Required CPD credit units for renewal (standard)", a: "15" },
    { q: "Can a foreign firm satisfy the 7-year APEC requirement?", a: "No (Individual only)" },
    { q: "Is BERDE mandatory for all PH buildings?", a: "No (Voluntary)" },
    { q: "Primary focus of EDGE", a: "Resource Efficiency" },
    { q: "Primary focus of WELL", a: "Occupant Health" },
    { q: "Primary focus of LEED", a: "Environmental Performance" },
    { q: "LEED Certified Point Range", a: "40-49" },
    { q: "LEED Silver Point Range", a: "50-59" },
    { q: "LEED Gold Point Range", a: "60-79" },
    { q: "LEED Platinum Point Range", a: "80+" },
    { q: "Years of Diversified Experience for BLEA", a: "2 Years" },
    { q: "Old Architecture Law", a: "RA 545" },
    { q: "Does ASEAN Architect allow independent practice in host country?", a: "No" },
    { q: "Term for Foreign Architect in ASEAN host country", a: "RFA" },
    { q: "Can a corporation be an APEC Architect?", a: "No" },
    { q: "Is membership in UAP required for APEC registration?", a: "Yes" },
  ], []);

  const [revealed, setRevealed] = useState({});

  const toggleReveal = (idx) => {
    setRevealed(prev => ({ ...prev, [idx]: !prev[idx] }));
  };

  return (
    <div className="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden h-[600px] flex flex-col">
      <div className="bg-slate-800 p-4 text-white flex items-center justify-between">
         <h3 className="font-bold flex items-center gap-2">
           <HelpCircle className="w-5 h-5 text-amber-400" /> Identification (50 Items)
         </h3>
         <span className="text-xs bg-slate-700 px-2 py-1 rounded">Scroll to view all</span>
      </div>
      <div className="overflow-y-auto p-4 space-y-2 bg-slate-50 flex-1">
        {questions.map((item, idx) => (
          <div 
            key={idx} 
            onClick={() => toggleReveal(idx)}
            className="group cursor-pointer bg-white p-3 rounded-lg border border-slate-200 hover:border-emerald-400 transition-all flex flex-col"
          >
            <div className="flex justify-between items-start">
              <span className="text-sm font-medium text-slate-700 flex gap-2">
                <span className="text-slate-400 font-mono text-xs mt-0.5">{idx + 1}.</span>
                {item.q}
              </span>
              <span className="text-xs text-slate-400 group-hover:text-emerald-500">
                {revealed[idx] ? "Hide" : "Reveal"}
              </span>
            </div>
            {revealed[idx] && (
               <div className="mt-2 text-sm font-bold text-emerald-600 pl-6 animate-fade-in">
                 {item.a}
               </div>
            )}
          </div>
        ))}
      </div>
    </div>
  );
};

