  const [flipped, setFlipped] = useState({});

  return (
    <div className="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden h-[600px] flex flex-col">
       <div className="bg-emerald-800 p-4 text-white flex items-center justify-between">
         <h3 className="font-bold flex items-center gap-2">
           <Layout className="w-5 h-5 text-emerald-400" /> Classification (50 Items)
         </h3>
         <span className="text-xs bg-emerald-700 px-2 py-1 rounded">Click to Reveal</span>
      </div>
      <div className="overflow-y-auto p-4 flex-1 bg-slate-100">
        <div className="grid grid-cols-2 gap-3">
          {items.map((item, idx) => (
            <div 
              key={idx}
              onClick={() => setFlipped(p => ({...p, [idx]: !p[idx]}))}
              className={`
                cursor-pointer h-24 rounded-lg flex items-center justify-center p-3 text-center text-sm font-medium transition-all duration-500 perspective-1000
                ${flipped[idx] 
                  ? 'bg-slate-800 text-white rotate-y-180 shadow-inner' 
                  : 'bg-white text-slate-700 shadow-sm hover:shadow-md border border-slate-200 hover:border-emerald-300'
                }
              `}
            >
              {flipped[idx] ? (
                 <span className="font-bold text-emerald-400 animate-fade-in">{item.grp}</span>
              ) : (
                 <span>{item.txt}</span>
              )}
            </div>
          ))}
        </div>
      </div>
    </div>
  )
}

